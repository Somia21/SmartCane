<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
   >

    <android.support.v7.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"

        tools:context="com.somia.fyp.assistant.commands.Receivers.CallingActivity"
        android:id="@+id/cardView">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp">

            <TextView
                android:id="@+id/making_call_in"
                android:layout_width="303dp"
                android:layout_height="wrap_content"
                android:text="Make a call" />

            <Spinner
                android:id="@+id/caling_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="35dp"
                android:layout_toEndOf="@+id/making_call_in"
                android:layout_toRightOf="@+id/making_call_in" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>