<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff">

    <FrameLayout

        android:layout_width="match_parent"
        android:layout_height="180dp"
        android:background="@drawable/signupimage"
        android:scaleType="centerCrop"
        >
    </FrameLayout>

    <ImageView
        android:id="@+id/image"
        android:layout_gravity="center"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/image"
        android:layout_marginTop="140dp"
        android:layout_centerHorizontal="true"

        />


    <LinearLayout

        android:id="@+id/logo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="70dp"
        >


        <com.somia.fyp.UI.customfonts.MyTextView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/app_name"
            android:textColor="#fff"
            android:textSize="34dp"
            />
    </LinearLayout>

    <ScrollView
        android:layout_below="@+id/image"
        android:layout_above="@+id/acc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <LinearLayout

            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="16dp"
            >

            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_height="1dp"
                android:layout_marginBottom="25dp"
                android:background="#dad8d8"/>

            <com.somia.fyp.UI.customfonts.MyEditText
                android:id="@+id/addYourPhoneNumber"
                android:textSize="16dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Your Phone Number"
                android:layout_marginLeft="46dp"
                android:layout_marginRight="46dp"
                android:drawableRight="@drawable/eye"
                android:textColorHint="@color/colorhint"
                android:textColor="@color/colortext"
                android:background="#0000"
                android:padding="16dp"
                android:gravity="left"
                />


            <View
                android:layout_width="match_parent"
                android:layout_marginLeft="56dp"
                android:layout_marginRight="56dp"
                android:layout_height="1dp"
                android:layout_marginBottom="25dp"
                android:background="#dad8d8"/>


            <Button
                android:id="@+id/signupfamilyuser"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Lets Start"
                android:textSize="16dp"
                android:textColor="#fff"
                android:gravity="center"
                android:background="#2b73e1"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:padding="9dp"
                android:layout_marginTop="16dp"

                />

        </LinearLayout>
    </ScrollView>

</RelativeLayout>
